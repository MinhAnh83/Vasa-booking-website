@model VasaHotel.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<h4> Create a Room</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TyperoomID" class="control-label"></label>
                <select asp-for="TyperoomID" class="form-control" asp-items="ViewBag.TyperoomID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="file" id="uploadhinh" name="uploadhinh" accept="image/*" />

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" style="background-color: cornflowerblue; color: white"/>
            </div>
        </form>
    </div>
    <div class="col-md-7">
        <img src="~/image/about/about-1.jpg" width="700px" height="550px" />
    </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-primary" >Back to List of rooms</a>
    </div>

