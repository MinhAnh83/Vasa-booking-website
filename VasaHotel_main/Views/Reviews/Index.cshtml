@model IEnumerable<VasaHotel.Models.Review>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review_content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review_content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.room_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.review_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.review_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.review_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
