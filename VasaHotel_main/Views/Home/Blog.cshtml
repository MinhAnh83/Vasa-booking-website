@{
}
@model IEnumerable<VasaHotel.Models.Blog>
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Blog</h2>
                    <div class="bt-option">
                        <a href="./home.html">Home</a>
                        <span>Blog Grid</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="blog-section blog-page spad">
    <div class="container">
        <div class="row">
            <tbody>
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="blog-item set-bg" data-setbg="@Url.Content("~/image/blog/"+ item.Images)">
                            <div class="bi-text">

                                <h4><a href="./blog-details.html">  @Html.DisplayFor(modelItem => item.Title)</a></h4>
                                <div class="b-time"><i class="icon_clock_alt"></i>  @Html.DisplayFor(modelItem => item.day_published)</div>
                                <a asp-action="Detail_blog" asp-route-id="@item.blog_id">View more</a> |
                            </div>
                        </div>
                    </div>
                }
                    <div class="col-lg-12">
                        <div class="load-more">
                            <a href="#" class="primary-btn">Load More</a>
                        </div>
                    </div>
            </div>
    </div>
</section>