@page "/admin/delete-role/{roleid}"
@model VasaHotel_main.Areas.Admin.Role.DeleteModel

@{
    ViewData["title"] = "Delete role";
}
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           <p>Are you sure to delete <strong>@Model.role.Name</strong></p>

            <button id="add-or-edit-role" type="submit" class="btn btn-danger">
                Delete
            </button>

            <a class="btn btn-primary" asp-page="./Index">Go to the List of roles</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}