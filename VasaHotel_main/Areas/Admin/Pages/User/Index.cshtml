@page "/admin/users" @*Specifies the URL for this Razor Page*@
@model VasaHotel_main.Areas.Admin.User.IndexModel
@*Specifies the IndexModel class as the data model for the Razor Page*@

@{
    ViewData["title"] = "List of User";
}
<h3>List of users</h3>
<p>Total users: @Model.totalUser</p> @*shows total number of users*@
<partial name="_StatusMessage" model="@Model.StatusMessage" /> @*Use a partial view to display temporary notifications*@
<table class="table">
    <tr>
        <th>User Name</th>
        <th>Role</th>
        <th>Action</th>
    </tr>
    @foreach (var user in @Model.users) @*iterate through the list of users and display each user's information in the table*@
    {
        <tr>

            <td>@user.UserName</td>
            <td>@user.RoleNames</td>

            <td>
                <a asp-route-id="@user.Id" class="btn btn-success btn-sm"
                   asp-page="./AddRole" asp-page-handler="StartUpdate"> @*//redirect to Addrole page with id*@
                    Add role
                </a>
            </td>
        </tr>
    }
</table>
