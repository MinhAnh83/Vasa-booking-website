@page "/admin/assign-user-role/{id}"
@model VasaHotel_main.Areas.Admin.User.AddRoleModel

@{
    ViewData["title"] = "List of User";
}



<h3>Assign role to User </h3>
<p>@Model.user.UserName</p>  

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<a class="btn btn-success btn-sm" asp-page="../User/Index">  Manage User </a>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoleNames"></label>
                @Html.ListBoxFor(m => m.RoleNames, Model.allRoles, new
           {
               id="id-select-roles",
               @class="form-control"
           })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>

            <button id="add-or-edit-role" type="submit" class="btn btn-primary">
                Update
            </button>

            <a class="btn btn-primary" asp-page="./Index">Danh sách</a>
        </form>
    </div>
</div>
