@using Microsoft.AspNetCore.Identity
@using VasaHotel_main.Areas.Identity.Data;
@inject SignInManager<VasaHotelUser> SignInManager
@inject UserManager<VasaHotelUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
       
            <a class="logout_btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>

       
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="logout_btn">Logout</button>
            </form>
       
    }
    else
    {
       
            <a class="logout_btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
        
            <a class="logout_btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
      
    }

