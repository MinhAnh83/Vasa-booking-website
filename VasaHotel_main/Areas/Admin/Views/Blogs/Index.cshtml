
@model IEnumerable<VasaHotel.Models.Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4 style="text-align:center">Manage Blog</h4>

<p>
    <a asp-action="Create" class="button-add">Create New</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Author's name:
            </th>
            <th>
                Published day: 
            </th>
            <th>
               Title of Blog: 
            </th>
            
            <th>
                Image of Blog:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.author_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.day_published)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                
                <td>
                    <img src="~/Upload/Images/@item.Images" width="100px" height="100px" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.blog_id"style="background-color: #ef8282ad; padding: 10px; border-radius: 10px; color: white; margin-top: 2px; margin-bottom: 10px; font-size: 14px; font-weight: 600; letter-spacing: 2px;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.blog_id" style="background-color: cornflowerblue; padding: 10px; border-radius: 10px; color: white; margin-top: 2px; margin-bottom: 10px; font-size: 14px; font-weight: 600; letter-spacing: 2px;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.blog_id" style="background-color: red; padding: 10px; border-radius: 10px; color: white; margin-top: 2px; margin-bottom: 10px; font-size: 14px; font-weight: 600; letter-spacing: 2px;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    .button-add {
        font-size: 13px;
        font-weight: 700;
        text-transform: uppercase;
        color: white;
        letter-spacing: 2px;
        background: #dfa974;
        border: none;
        padding: 14px 34px 13px;
    }

    .button-add1 {
        font-size: 13px;
        font-weight: 700;
        text-transform: uppercase;
        color: white;
        letter-spacing: 2px;
        background: hotpink;
        border: none;
        padding: 14px 34px 13px;
    }
</style>